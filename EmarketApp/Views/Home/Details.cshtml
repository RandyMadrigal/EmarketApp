@using EmarketApp.Core.Application.ViewModels.Anuncios;


@model SaveAnuncioVm

@{
    ViewData["Title"] = "Detalles";
}

<div class="container-fluid my-5 text-white">
    <div class="row">

        <div class="col-md-12 col-sm-6 mt-5">
            <div class="card bg-transparent text-white text-center">
                <div class="card-title">
                    <h3 class="card-text fw-bold ">Detalles del anuncio</h3>
                </div>
            </div>
        </div>

        @* Carousel *@
        <div class="row">
                        
            <div class="col-md-6 mt-3">

                <div id="DetailsCarousel" class="carousel slide w-100" data-ride="carousel">
                    <div class="carousel-inner animate__animated animate__fadeIn">

                        <div class="carousel-item active">
                            <img src="@Model.ImgFile1" class="rounded mx-auto d-block text-white" alt="no hay imagen disponible"
                                 height="500"
                                 width="600">
                        </div>

                        <div class="carousel-item">
                            <img src="@Model.ImgFile2" class="rounded mx-auto d-block text-white" alt="no hay imagen disponible"
                                 height="500"
                                 width="600">
                        </div>

                        <div class="carousel-item">
                            <img src="@Model.ImgFile3" class="rounded mx-auto d-block text-white" alt="no hay imagen disponible"
                                 height="500"
                                 width="600">
                        </div>

                        <div class="carousel-item">
                            <img src="@Model.ImgFile4" class="rounded mx-auto d-block text-white" alt="no hay imagen disponible"
                                 height="500"
                                 width="600">
                        </div>

                    </div>

                    <button class="carousel-control-prev" type="button" data-bs-target="#DetailsCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>

                    <button class="carousel-control-next" type="button" data-bs-target="#DetailsCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>

            </div>

            @* Carousel *@

            <div class="col-md-6 mt-3">

                <div class="card bg-transparent">

                    <div class="card-body">

                        <p class="card-text fs-4"> <strong>Nombre:</strong> @Model.Name </p>

                        <p class="card-text fs-4"> <strong>Precio:</strong> RD$ @Model.Price </p>

                        <p class="card-text fs-4"> <strong>Categoria:</strong> @Model.CategoryName </p>

                        <p class="card-text fs-4">
                            <strong>Descripcion:</strong> @Model.Description
                        </p>

                        <p class="card-text fs-4"> <strong>Fecha de publicacion:</strong> @Model.Created.ToString("dd/MM/yyyy") </p>

                        <p class="card-text fs-4"> <strong>Autor: </strong>  @Model.Autor </p>

                        <p class="card-text fs-4"> <strong>Correo: </strong>  @Model.Email </p>

                        <p class="card-text fs-4"> <strong>Telefono:   </strong> @Model.Phone </p>

                    </div>


                    <div class="mb-2">
                        <a asp-controller="Home" asp-action="Index"
                           class="btn btn-outline-info btn-sm float-end mx-3"> volver atras </a>
                    </div>


                </div>

            </div>

            

        </div>

    </div>

</div>



