@using EmarketApp.Core.Application.ViewModels.Anuncios;

@model List<AnuncioVm>

@{
    ViewData["Title"] = "Anuncios";
}


<div class="container mt-5">

    <div class="row">
        <div class="col-md-12 col-sm-6 mt-5">
            <a asp-controller="Anuncios" asp-action="Create" class="btn btn-success float-end my-2"> Agregar nuevo anuncio</a>

        </div>
    </div>
</div>

<div class="container-fluid text-white">
    <div class="row">

        <div class="col-md-12 col-sm-6 mt-2">
            <div class="card bg-transparent text-white text-center">
                <div class="card-title">
                    <h3 class="card-text fw-bold ">MIS ANUNCIOS</h3>
                </div>
            </div>
        </div>

        <div class="row">

            <div class="col-md-12 mt-2">

                <div class="container-fluid text-white">

                    <div class="row">

                        @if (Model.Count == 0 || Model == null)
                        {
                            <h3> No has publicado Anuncios </h3>
                        }
                        else
                        {

                            @foreach (AnuncioVm item in Model)
                            {

                                <div class="col-md-3 mb-3">

                                    <div class="card bg-dark bg-opacity-50 animate__animated animate__fadeIn">
                                        <img src="@item.ImgFile1"
                                             class="rounded mx-auto d-block img-size-Anuncio" alt="...">
                                        <div class="card-body">

                                            <h5>  @item.Name </h5>

                                            <p class="card-text"> <strong>Precio:</strong> RD$@item.Price </p>

                                            <p class="card-text"> <strong>Categoria:</strong>@item.CategoryName </p>

                                            <p class="card-text">
                                                <strong>Descripcion:</strong> @item.Description
                                            </p>

                                        </div>

                                        <div class="my-3 mx-1">

                                            <a asp-controller="Anuncios" asp-action="Delete" asp-route-Id="@item.Id"
                                               class="btn btn-outline-danger float-end mx-2">Borrar</a>

                                            <a asp-controller="Anuncios" asp-action="Edit" asp-route-Id="@item.Id"
                                               class="btn btn-outline-primary float-end">Editar</a>


                                        </div>

                                    </div>
                                </div>

                            }
                        }
                    </div>
                </div>

            </div>

        </div>

    </div>

</div>


