@using EmarketApp.Core.Application.ViewModels.Categories;

@model List<CategoryVm>

@{
    ViewData["Title"] = "Categorias";
}

<div class="container mt-5">

    <div class="row">
        <div class="col-md-12 col-sm-6 mt-5">
            <a asp-controller="Category" asp-action="Create" class="btn btn-success float-end my-2"> Agregar nueva Categoria</a>

        </div>
    </div>

</div>

<div class="container-fluid text-white">
    <div class="row">

        <div class="col-md-12 col-sm-6 mt-2">
            <div class="card bg-transparent text-white text-center">
                <div class="card-title">
                    <h3 class="card-text fw-bold ">CATEGORIAS</h3>
                </div>
            </div>
        </div>

        <div class="row">

            <div class="col-md-12 mt-2">

                <div class="container-fluid text-white">

                    <div class="row">

                        @if (Model.Count == 0 || Model == null)
                        {
                            <h3> No hay categorias creadas </h3>
                        }
                        else
                        {

                            @foreach (CategoryVm item in Model)
                            {

                                <div class="col-4 mb-3">

                                    <div class="card bg-dark bg-opacity-50 animate__animated animate__fadeIn">    
                                        
                                        <div class="card-body">
                                            <h4 class="text-center"> @item.Name </h4>
                                            <h6><strong>Descripcion:</strong> @item.Description</h6>  
                                        </div>
                                            <div >

                                                <h6 class=" mx-4">La cantidad de Anuncios: @item.AnuncioQuantity</h6>
                                                <h6 class=" mx-4">La cantidad de dueños: @item.UserQuantity</h6>

                                            </div>

                                            <div class="m-3">
                                                <a asp-controller="Category" asp-action="Delete" asp-route-Id="@item.Id"
                                                   class="btn btn-outline-danger ">Borrar</a>

                                                <a asp-controller="Category" asp-action="Edit" asp-route-Id="@item.Id"
                                                   class="btn btn-outline-primary">Editar</a>
                                            </div>
                                    </div>
                                </div>

                            }
                        }


                    </div>
                </div>

            </div>

        </div>

    </div>

</div>


